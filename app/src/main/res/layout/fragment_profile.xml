<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/bgr_profile"
    android:orientation="vertical">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_user"/>
        <TextView
            android:fontFamily="@font/font_text_home"
            android:textStyle="italic"
            android:textColor="#030E1F"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex Richard"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:background="@drawable/button_blue_border"
            android:backgroundTint="#B7ADAD"
            android:orientation="vertical"
            android:layout_width="380dp"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/button_blue_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/name"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Name"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Vu Hoai Anh" />

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_blue_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/gender"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Gender"/>
                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Male" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/button_blue_border"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/birthday"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Birthday"/>
                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="01/01/2001" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/button_blue_border"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/phone"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Phone"/>
                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="123456789" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/button_blue_border"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/address"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Address"/>
                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Tan Trieu, Thanh tri, Hanoi" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/button_blue_border"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/mail"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Mail"/>
                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="vuhoaianh@gmail.com" />
                </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="32dp"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:padding="5dp"
                    android:backgroundTint="#FFC107"
                    android:background="@drawable/button_blue_border"
                    android:id="@+id/btn_editProfile"
                    android:drawableStart="@drawable/resume"
                    android:text="Edit Profile"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_changePasswords"
                    android:padding="5dp"
                    android:backgroundTint="#8BC34A"
                    android:layout_marginStart="15dp"
                    android:drawableStart="@drawable/btn_change_passwords"
                    android:background="@drawable/button_blue_border"
                    android:text="Change Password"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>