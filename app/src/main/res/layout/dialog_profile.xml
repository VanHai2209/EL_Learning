<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_blue_border"
    android:backgroundTint="#BFB4B4"
    android:padding="20dp"
    android:gravity="center">
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@drawable/button_blue_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/name"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <TextView
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:id="@+id/txtName"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vu Hoai Anh" />

    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_blue_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/rank_img2"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Rank"/>

        <TextView
            android:id="@+id/txtRank"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="Male"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/button_blue_border"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/score"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Score"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/txtScore"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="123456789" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/button_blue_border"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Mail"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/txtEmail"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="vuhoaianh@gmail.com" />
    </LinearLayout>
    <Button
        android:id="@+id/btnOke"
        android:backgroundTint="#4F7350"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Oke"/>
</LinearLayout>