<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TopicWordView"
    android:orientation="vertical"
    android:background="@drawable/bgr_search">
    <LinearLayout
        android:padding="5dp"
        android:background="#2F2E2E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>
        <TextView
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/font_style_home"
            android:layout_marginStart="80dp"
            android:id="@+id/txtNameTopic"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Topic"/>
    </LinearLayout>
    <AutoCompleteTextView
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="15dp"
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search..."
        android:textColorHint="#E3CBD7"
        android:inputType="text"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/suggestionList"
                android:layout_width="match_parent"
                android:layout_height="650dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>